<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD This Web</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="container">
        <h1>Create user</h1>

        <form action="/post-crud" method="POST" class="row g-3">
            <div class="col-md-6">
                <label for="inputEmail4" class="form-label">Email</label>
                <input type="email" class="form-control" id="inputEmail4" placeholder="Email" name="email">
            </div>
            <div class="col-md-6">
                <label for="inputPassword4" class="form-label">Password</label>
                <input type="password" class="form-control" id="inputPassword4" placeholder="Password" name="password">
            </div>
            <div class="col-md-6">
                <label for="inputAddress" class="form-label">First Name</label>
                <input type="text" class="form-control" id="inputAddress" name="firstName" placeholder="Soram">
            </div>
            <div class="col-md-6">
                <label for="inputAddress" class="form-label">Last Name</label>
                <input type="text" class="form-control" id="inputAddress" name="lastName" placeholder="Yo">
            </div>
            <div class="col-md-8">
                <label for="inputAddress2" class="form-label">Address</label>
                <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor"
                    name="address">
            </div>
            <div class="col-md-4">
                <label for="inputAddress" class="form-label">Phone Number</label>
                <input type="text" class="form-control" id="inputAddress" placeholder="0123456789" name="phoneNumber">
            </div>
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label for="inputState" class="form-label">Sex</label>
                    <select name="gender" id="inputState" class="form-control">
                        <option value="1" selected>Male</option>
                        <option value="0">Female</option>
                    </select>
                </div>
                <div class="form-group col-md-2">
                    <label for="inputState" class="form-label">Role</label>
                    <select name="roleId" id="inputState" class="form-control">
                        <option value="0" selected>Admin</option>
                        <option value="1">Doctor</option>
                        <option value="2">Patient</option>
                    </select>
                </div>
            </div>

            <div class="col-md-12">
                <button type="submit" class="btn btn-primary">Sign in</button>
            </div>
        </form>
        <br>
    </div>


</body>

</html>